        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/bumptech/glide"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/Kennyc1012/MultiStateView"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/ogaclejapan/SmartTabLayout"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/jhy/jsoup"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/hongyangAndroid/okhttputils"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/81813780/AVLoadingIndicatorView"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="感谢gank.io提供api"
        android:textSize="15sp"
        android:textStyle="bold"/>

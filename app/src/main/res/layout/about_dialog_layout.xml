            style="@style/about_dialog_textview_style"
            android:text="https://github.com/JiongBull/jlog"/>

        <TextView
            style="@style/about_dialog_textview_style"
            android:text="https://github.com/Aspsine/SwipeToLoadLayout"/>

        <TextView
            style="@style/about_dialog_textview_style"
